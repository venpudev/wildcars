---
// Footer component data
const menuLinks = [
    { name: "Inicio", href: "/" },
    { name: "Nosotros", href: "/nosotros" },
    { name: "Catálogo", href: "/catalogo" },
    { name: "Contacto", href: "/contacto" }
];

const socialLinks = [
    { 
        name: "Facebook", 
        href: "https://web.facebook.com/profile.php?id=61578635675285", 
        icon: "fab fa-facebook-f",
        target: "_blank"
    },
    { 
        name: "Instagram", 
        href: "https://www.instagram.com/wildcars.cl/", 
        icon: "fab fa-instagram",
        target: "_blank"
    }
];

const contactInfo = [
    {
        type: "Dirección",
        value: "Av. la Dehesa 1500. Torre 2, piso 4, oficina 8, La Dehesa",
        icon: "fas fa-map-marker-alt",
        link: "https://maps.google.com/?q=Avda.+Granaderos+2223+Calama+Antofagasta+Chile",
        isExternal: true
    },
    {
        type: "Teléfono",
        value: "+56 9 8993 9362",
        icon: "fas fa-phone",
        link: "tel:+56989939362",
        isExternal: false
    },
    {
        type: "Teléfono",
        value: "+56 9 7306 3816",
        icon: "fas fa-phone",
        link: "tel:+56973063816",
        isExternal: false
    },
    {
        type: "Correo",
        value: "rolando@wildcars.cl",
        icon: "fas fa-envelope",
        link: "mailto:rolando@wildcars.cl",
        isExternal: false
    },
    {
        type: "Correo",
        value: "alfredo@wildcars.cl",
        icon: "fas fa-envelope",
        link: "mailto:alfredo@wildcars.cl",
        isExternal: false
    }
];
---

<footer class="bg-[#020617] text-white relative z-1">
  <div class="absolute inset-0 z-0" style={{ background: "radial-gradient(ellipse 80% 60% at 50% 0%, rgba(255, 80, 120, 0.25), transparent 70%), #000000" }} />
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 relative z-10">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- Primera Columna: Logo y Redes Sociales -->
      <div class="space-y-6">
        <!-- Logo -->
        <div class="flex items-center space-x-4">
          <img class="h-24 w-auto" src="/logo.webp" alt="Wildcars - Automotora">
          <span class="text-1xl font-bold text-white">Wildcars</span>
        </div>

        <!-- Redes Sociales -->
        <div>
          <h3 class="text-lg font-semibold mb-4">Síguenos</h3>
          <div class="flex space-x-4">
            {socialLinks.map((social) => (
              <a href={social.href} class="w-10 h-10 bg-gray-800 rounded-full flex items-center justify-center hover:bg-blue-600 transition-colors duration-200" aria-label={social.name} target={social.target} rel="noopener noreferrer">
                <i class={`${social.icon} text-sm text-white`}></i>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Segunda Columna: Enlaces del Menú -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Navegación</h3>
        <ul class="space-y-3">
          {menuLinks.map((link) => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors duration-200 flex items-center">
                <i class="fas fa-chevron-right text-xs mr-2"></i>
                {link.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Tercera Columna: Información de Contacto -->
      <div>
        <h3 class="text-lg font-semibold mb-6">Contacto</h3>
        <div class="space-y-4">
          {contactInfo.map((contact) => (
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <i class={`${contact.icon} text-white mt-1`}></i>
              </div>
              <div>
                <p class="text-sm font-medium text-gray-300">{contact.type}</p>
                {contact.link ? (
                  <a 
                    href={contact.link}
                    target={contact.isExternal ? "_blank" : undefined}
                    rel={contact.isExternal ? "noopener noreferrer" : undefined}
                    class="text-gray-400 hover:text-white transition-colors duration-200 underline decoration-dotted hover:decoration-solid"
                  >
                    {contact.value}
                  </a>
                ) : (
                  <p class="text-gray-400">{contact.value}</p>
                )}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Divisor -->
    <div class="border-t border-gray-800 mt-12 pt-6">
      <div class="text-center">
        <p class="text-gray-400 text-sm">© 2025 Wild Cars. Todos los derechos reservados.</p>
        <p class="text-gray-500 text-xs mt-2">
          Diseño y desarrollo 
          <a href="https://venpu.cl" target="_blank" class="text-red-400 hover:text-red-300 transition-colors duration-200 font-medium">
            Venpu
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
